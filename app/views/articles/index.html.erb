<div>
    <h1>Articles</h1>
    <div>
        <% @articles.each do |article| %>
            <div>
                <h3> 
                    <%= link_to article.title, article %>
                </h3>
                <p> <%= article.body %> </p>
            </div>
        <% end %>
    </div>

    <div><%= link_to "New Article", new_article_path %></div>
</div>

