<div>
    <h1>Articles</h1>
    <h2>Our blog has <%= Article.public_count %> articles and counting...</h2>
    <div>
        <% @articles.each do |article| %>
            <% unless article.archived? %>
                <div>
                    <h3> 
                        <%= link_to article.title, article %>
                    </h3>
                    <p> <%= article.body %> </p>
                </div>
            <% end %>
        <% end %>
    </div>

    <div><%= link_to "New Article", new_article_path %></div>
</div>

