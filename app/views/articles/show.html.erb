<div>
    <div>
        <h1> <%= @article.title %> </h1>
        <p> <%= @article.body %> </p>
    </div>
    <div>
        <%= link_to "Edit", edit_article_path(@article) %>
    </div>
    <div>
        <%= link_to "Destroy", @article, data: {
            turbo_method: :delete,
            turbo_confirm: :"Are you sure?"
        } %>
    </div>
</div>

<div>
    <h1>Here are comments</h1>
    <% @article.comments.each do |comment| %>
        <p>
        <strong>Commenter: </strong>
        <%= comment.commenter %>
        </p>
        <p>
        <strong>body: </strong>
        <%= comment.body %>
        </p>
    <% end %>
</div>

<div>
    <h2>Add a comment</h2>
    <%= form_with model: [@article, @article.comments.build] do |form| %>
        <p>
            <%= form.label :commenter %> <br>
            <%= form.text_field :commenter %>
        </p>
        <p>
            <%= form.label :body %> <br>
            <%= form.text_area :body %>
        </p>
        <p>
            <%= form.submit %>
        </p>
    <% end %>
</div>
